.project_title= link_to event.name, event
- unless event.images.empty?
  .image= image_tag event.images.first.filename.url(:thumbnail)
.timestamp
  - if event.end_at.blank?
    = l event.start_at, :format => :short
  - else
    = date_range(event.start_at.to_date, event.end_at.to_date, :format => :long)

.more_link
  = link_to t(:more), event
  = " > "